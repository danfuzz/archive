## Loop expression demo
##


##
## Main Tests
##

var v = 0;

do { /next ->
    v := v + 1;
    if (v == 5) {
        continue
    } else if (v == 7) {
        yield /next
    };
    note("Value is \%q(v).")
} while (v < 10);

def result1 = do {
    v := v + 1;
    if (v == 13) {
        break "blort"
    };
    note("Value is \%q(v).")
} while (v < 15);

note("Result is \%q(result1).");

def result2 = do /out {
    v := v + 1;
    if (v == 18) {
        yield /out "frotz"
    };
    note("Value is \%q(v).")
} while (v < 20);

note("Result is \%q(result2).");
