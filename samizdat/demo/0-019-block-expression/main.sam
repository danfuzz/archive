#= language core.Lang0


##
## Private Definitions
##

fn print(arg) {
    note($Format::sourceUnadorned(arg))
};


##
## Main Tests
##

print({ -> });
print({ x -> });
print({ x, . -> });
print({ (a, b?, c*) -> });
print({ stuff() -> });
print({ stuff(a) -> });

print({ /out -> });
print({ x /out -> });
print({ x, . /out -> });
print({ (a, b?, c*) /out -> });
print({ stuff() /out -> });
print({ stuff(a) /out -> });

print({ x, y -> x.cat(y) }("bl", "ort"));
print({ x, y /out -> yield /out x.cat(y) }("fi", "zmo"));
print({ yowza(args+) -> "".cat(args*) }("i", "gr", "am"));
