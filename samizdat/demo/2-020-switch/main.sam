##
## Switch expression demo
##


##
## Private Definitions
##

fn noDefault(value) {
    return? switch (value) {
        1: { "blort" }
    }
};

fn powerName(value) {
    return? switch /out (value) {
        1:           { yield "one" };
        2:           { yield /out "two" };
        4:           { return "four" };
        8:           { /outie -> yield /outie "eight" };
        (1..4)*:     { yield "um..." };
        5: 6: blort: { yield "wha?" };
        99:          { "shouldBeVoid" };
        default:     { yield "uh..." }
    }
};

fn interpolator(value, keys) {
    return switch (value) {
        10: 11:      { "Constant override" };
        (value * 0): { /out -> yield /out "Calculated override" };
        keys*:       { "Yes" };
        default:     { "No" }
    }
};

fn namer(value) {
    return switch (def x = value) {
        1: 2: 3: { x * 10   };
        4: 5: 6: { x * 100  };
        default: { x * 1000 }
    }
};


