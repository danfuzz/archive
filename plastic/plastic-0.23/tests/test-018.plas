// Test file for PlasticSound

main := Main (
    iters:  441000, // samples
    count:  1,
    sink_0: foo);

foo := LiveAudio (
    clock:   44100, // Hz, samples/sec
    bufSize: 32768,
    bits:    16,
    count:   2,
    in_0:    limit.out,
    in_1:    delay.out);

delay := FixedDelay (
    period: 11025,
    in:     quant.out);

quant := FixedQuantize (
    step: 0.3,
    in:   limit.out);

limit := SigmoidClip (
    a:     1.0,
    in:    feedb.out);

feedb := Feedback (
    maxDelay: 10000,
    in_feed:  constFeed.out,
    in_delay: delay1.out,
    in_wave:  mulB.out);

constFeed := Const (
    value: 0.7);

delay1 := FixedSineWave (
    v0:    5000.0,
    v1:    10000.0,
    phase: 0.0,
    wlen:  4410.0); // = 10 Hz @ 44.1KHz

mulB := Mul (
    count: 3,
    in_0:  waveB.out,
    in_1:  lfo3.out,
    in_2:  lfo4.out);

waveB := FixedSquareWave (
    v0:    -1.0,
    v1:    1.0,
    phase: 0.0,
    wlen:  220.5); // == 200 Hz @ 44.1KHz

lfo3 := FixedSquareWave (
    v0:    0.0,
    v1:    1.0,
    phase: 0.0,
    wlen:  4410.0); // = 10 Hz @ 44.1KHz

lfo4 := FixedSquareWave (
    v0:    0.0,
    v1:    1.0,
    phase: 0.0,
    wlen:  44100.0); // = 1 Hz @ 44.1KHz
