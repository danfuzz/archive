// Test file for PlasticSound

main := Main (
    iters:  441000, // samples
    count:  1,
    sink_0: foo);

foo := LiveAudio (
    clock:   44100, // Hz, samples/sec
    bufSize: 32768,
    bits:    16,
    count:   1,
    in_0:    mul.out);

mul := Mul (
    count: 2,
    in_0:  random.out,
    in_1:  wave.out);

random := FixedRandomWave (
    seed:  15,
    v0:    0.0,
    v1:    1.0,
    phase: 0.0,
    wlen:  1.0);

wave := FixedSineWave (
    v0:    -1.0,
    v1:    1.0,
    phase: 0.0,
    wlen:  220.5); // == 200 Hz @ 44.1KHz
